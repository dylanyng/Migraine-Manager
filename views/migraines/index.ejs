<h2>Recorded Episodes</h2>

<% if (migraineEvents.length > 0) { %>
  <ul class="migraine-list">
    <% migraineEvents.forEach(function(event) { %>
      <li class="migraine-item">
        <h3 class="migraine-date"><%= event.date.toLocaleDateString() %></h3>
        <p class="migraine-type"><%= event.attackType %></p>
        <p class="migraine-pain">Pain Level: <%= event.painLevel %></p>
        <a href="/migraines/<%= event._id %>" class="btn btn-secondary">Details</a>
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <p class="no-events">No migraine events recorded yet.</p>
<% } %>

<a href="/migraines/new" class="btn btn-primary">Record New Episode</a>