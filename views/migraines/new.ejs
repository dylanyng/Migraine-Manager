<%- contentFor('body') %>

<div class="flex min-h-full flex-col justify-center px-6 py-5 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-5 text-center text-2xl font-bold leading-9 tracking-tight">Record New Episode</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form class="space-y-6" action="/migraines" method="POST">

            <div>
                <label for="pain-level" class="block text-sm font-medium leading-6">Attack Type</label>
                <fieldset id="pain-level" class="grid mt-2 w-auto grid-cols-3 gap-1 rounded-xl bg-deadnight border-2 border-indigo-100  p-1">

                    <div>
                        <input type="radio" id="migraineAT" value="migraine" name="attackType" class="peer hidden" required checked/>
                        <label for="migraineAT" class="block cursor-pointer select-none rounded-l p-2 text-center font-bold text-indigo-100 hover:bg-red-900/60 peer-checked:bg-red-800/90 peer-checked:hover:bg-red-800 peer-checked:font-bold peer-checked:text-white">Migraine</label>
                    </div>
    
                    <div>
                        <input type="radio" id="headacheAT" value="headache" name="attackType" class="peer hidden"/>
                        <label for="headacheAT" class="block cursor-pointer select-none p-2 text-center font-bold text-indigo-100 hover:bg-orange-900/60 peer-checked:bg-orange-800/90 peer-checked:hover:bg-orange-800 peer-checked:font-bold peer-checked:text-white">Headache</label>
                    </div>
            
                    <div>
                        <input type="radio" id="miscSymptomsAT" value="misc symptoms" name="attackType" class="peer hidden" />
                        <label for="miscSymptomsAT" class="block cursor-pointer select-none rounded-r p-2 text-center font-bold text-indigo-100 hover:bg-yellow-900/60 peer-checked:bg-yellow-800/90 peer-checked:hover:bg-yellow-800 peer-checked:font-bold peer-checked:text-white">Symptoms</label>
                    </div>
            
                </fieldset>
            </div>

            <div>
                <label for="date" class="block text-sm font-medium leading-6">Date</label>
                <input type="date" id="date" name="date" required class="mt-2 block w-full appearance-none rounded-md border-0 p-1.5 bg-indigo-100 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
            </div>

            <div hidden>
                <label for="duration" class="block text-sm font-medium leading-6">Duration (minutes)</label>
                <input type="number" id="duration" name="duration" min="0" class="mt-2 block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
            </div>

            <div>
                <label for="pain-level" class="block text-sm font-medium leading-6">Pain Level</label>
                <fieldset id="pain-level" class="grid mt-2 w-auto grid-cols-6 gap-2 rounded-xl bg-indigo-100 p-2">
                    <div>
                        <input type="radio" id="0" value="0" name="painLevel" class="peer hidden"/>
                        <label for="0" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-green-600 peer-checked:font-bold peer-checked:text-white">0</label>
                    </div>
    
                    <div>
                        <input type="radio" id="1" value="1" name="painLevel" class="peer hidden"/>
                        <label for="1" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-yellow-400/90 peer-checked:font-bold peer-checked:text-white">1</label>
                    </div>
            
                    <div>
                        <input type="radio" id="2" value="2" name="painLevel" class="peer hidden" />
                        <label for="2" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-yellow-500 peer-checked:font-bold peer-checked:text-white">2</label>
                    </div>
            
                    <div>
                        <input type="radio" id="3" value="3" name="painLevel" class="peer hidden" />
                        <label for="3" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-orange-400 peer-checked:font-bold peer-checked:text-white">3</label>
                    </div>
            
                    <div>
                        <input type="radio" id="4" value="4" name="painLevel" class="peer hidden" />
                        <label for="4" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-orange-600 peer-checked:font-bold peer-checked:text-white">4</label>
                    </div>
    
                    <div>
                        <input type="radio" id="5" value="5" name="painLevel" class="peer hidden" />
                        <label for="5" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-red-800 peer-checked:font-bold peer-checked:text-white">5</label>
                    </div>
                </fieldset>
            </div>

            <div>
                <label for="start-location" class="block text-sm font-medium leading-6">Where did it start?</label>
                <fieldset id="start-location" class="grid mt-2 w-auto grid-cols-6 gap-1 rounded-xl bg-indigo-100 p-2">
                    <div class="m-auto">
                        <input type="radio" id="home" value="home" name="startLocation" class="peer hidden"/>
                        <label for="home" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-indigo-600 peer-checked:font-bold peer-checked:text-white">home</label>
                    </div>

                    <div class="m-auto">
                        <input type="radio" id="bed" value="bed" name="startLocation" class="peer hidden" />
                        <label for="bed" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-indigo-600 peer-checked:font-bold peer-checked:text-white">bed</label>
                    </div>
    
                    <div class="m-auto">
                        <input type="radio" id="work" value="work" name="startLocation" class="peer hidden"/>
                        <label for="work" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-indigo-600 peer-checked:font-bold peer-checked:text-white">work</label>
                    </div>

                    <div class="m-auto">
                        <input type="radio" id="school" value="school" name="startLocation" class="peer hidden" />
                        <label for="school" class="block cursor-pointer  select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-indigo-600 peer-checked:font-bold peer-checked:text-white">school</label>
                    </div>
            
                    <div class="m-auto">
                        <input type="radio" id="transit" value="transit" name="startLocation" class="peer hidden" />
                        <label for="transit" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-indigo-600 peer-checked:font-bold peer-checked:text-white">transit</label>
                    </div>

                    <div class="m-auto">
                        <input type="radio" id="out" value="out" name="startLocation" class="peer hidden" />
                        <label for="out" class="block cursor-pointer select-none rounded-xl p-2 text-center font-bold text-indigo-600 peer-checked:bg-indigo-600 peer-checked:font-bold peer-checked:text-white">out</label>
                    </div>
                </fieldset>
            </div>

            <div>
                <span class="block text-sm font-medium leading-6 mb-2">Pain Location</span>
                <ul class="grid mt-2 w-auto grid-cols-3 gap-2 rounded-xl bg-indigo-100 p-2">
                    <% ['left', 'front', 'right', 'other', 'back', 'entire head'].forEach(function(location) { %>
                        <li class="inline-flex py-2 px-1 text-sm font-medium border text-gray-600 -mt-px rounded-lg first:mt-0 sm:-ml-px sm:mt-0">
                            <div class="relative flex items-start w-full">
                                <div class="flex items-center h-5">
                                    <input id="<%= location %>" name="painLocation" type="checkbox" value="<%= location %>" class="w-5 text-red-600 cursor-pointer h-5 border border-gray-300 rounded-md  ">
                                </div>
                                <label for="<%= location %>" class="ml-1 block text-sm font-semibold text-indigo-900 cursor-pointer"><%= location.charAt(0).toUpperCase() + location.slice(1) %></label>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            </div>

            <div>
                <label for="notes" class="block text-sm font-medium leading-6">Notes</label>
                <textarea id="notes" name="notes" rows="3" class="bg-indigo-100 mt-2 block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>
            </div>

            <div class="flex items-center mb-4">
                <input type="checkbox" id="medication" name="medication" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                <label for="medication" class="ml-2 block text-sm">Medication Taken</label>
            </div>
            
            <div id="medicationDetails" class="space-y-4 hidden">
                <h3 class="text-lg font-medium leading-6">Medication Details</h3>
                <div id="medicationList"></div>
                <div class="flex space-x-2">
                    <input type="text" id="medName" placeholder="Name" class="mt-1 block w-full rounded-md border-0 p-1.5 bg-indigo-100 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <input type="text" id="medDose" placeholder="Dose" class="mt-1 block w-full rounded-md border-0 p-1.5 bg-indigo-100 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <input type="number" id="medQuantity" placeholder="Quantity" min="0" class="mt-1 block w-full rounded-md border-0 p-1.5 bg-indigo-100 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <button type="button" id="addMedication" class="mt-1 inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Add</button>
                </div>
                <div id="medicationSuggestions" class="mt-1 w-full bg-white border border-gray-300 rounded-md shadow-sm hidden"></div>
            </div>

            <div>
                <label for="triggers" class="block text-sm font-medium leading-6">Triggers</label>
                <div class="mt-2 flex flex-wrap gap-2" id="selectedTriggers"></div>
                <div class="relative">
                    <input type="text" id="triggerInput" class="bg-indigo-100 mt-2 block w-full rounded-md border-0 p-1.5 pl-3 pr-10 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter a trigger">
                    <button type="button" id="addTrigger" class="absolute inset-y-0 right-0 flex items-center px-3 bg-indigo-500 text-white rounded-r-md hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-600">
                        Add
                    </button>
                </div>
                <div id="triggerSuggestions" class="mt-1 w-full bg-white border border-gray-300 rounded-md shadow-sm hidden"></div>
                <input type="hidden" id="triggers" name="triggers" value="">
            </div>

            <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 p-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Record Migraine Event</button>
        </form>
    </div>
</div>

<script src="/js/medication.js" type="text/javascript"></script>
<script src="/js/triggers.js" type="text/javascript"></script>
<script src="/js/medDetailsToggle.js" type="text/javascript"></script>
<script src="/js/dateHandler.js" type="text/javascript"></script>

<script>
    setDateAsToday()
    restrictFutureDates()
</script>