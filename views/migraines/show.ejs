<%- contentFor('body') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <!-- Back button -->
    <a href="/migraines" class="inline-flex items-center text-indigo-400 hover:text-indigo-300 transition-colors duration-200 mb-6 group">
      <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Episodes
    </a>

    <!-- Main card -->
    <div class="bg-slate-800/50 border border-slate-700/50 rounded-2xl shadow-xl overflow-hidden backdrop-blur-sm">
      <!-- Header with attack type color -->
      <div class="px-6 py-5 <%= migraineEvent.attackType === 'migraine' ? 'bg-gradient-to-r from-red-900/90 to-red-800/80' : 
                               migraineEvent.attackType === 'headache' ? 'bg-gradient-to-r from-orange-900/90 to-orange-800/80' : 'bg-gradient-to-r from-yellow-900/90 to-yellow-800/80' %> border-b border-slate-700/50">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-3xl font-bold text-white mb-1"><%= migraineEvent.date.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></h2>
            <p class="text-lg font-semibold text-white/90 capitalize"><%= migraineEvent.attackType %></p>
          </div>
          <% if (migraineEvent.painLevel !== undefined) { %>
          <div class="text-right">
            <p class="text-sm text-white/80 mb-1">Pain Level</p>
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-white/20 backdrop-blur-sm border-2 border-white/30">
              <span class="text-2xl font-bold text-white"><%= migraineEvent.painLevel %></span>
            </div>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Content sections -->
      <div class="p-6 space-y-6">
        <!-- Pain Location -->
        <% if (migraineEvent.painLocation != "" && migraineEvent.painLocation.length > 0) { %>
        <div class="bg-slate-900/40 rounded-xl p-4 border border-slate-700/30">
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wide">Pain Location</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            <% migraineEvent.painLocation.forEach(function(location) { %>
              <span class="bg-indigo-500/80 hover:bg-indigo-500 text-white px-3 py-1.5 rounded-full text-sm font-medium transition-colors duration-200"><%= location %></span>
            <% }); %>
          </div>
        </div>
        <% } %>

        <!-- Start Location -->
        <% if (migraineEvent.startLocation && migraineEvent.startLocation.length > 0) { %>
        <div class="bg-slate-900/40 rounded-xl p-4 border border-slate-700/30">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wide">Episode Start Location</h3>
          </div>
          <p class="text-slate-200 font-medium capitalize"><%= Array.isArray(migraineEvent.startLocation) ? migraineEvent.startLocation.join(', ') : migraineEvent.startLocation %></p>
        </div>
        <% } %>

        <!-- Medication OR Quick Log Notice -->
        <% if (migraineEvent.quickLog === true) { %>
        <div class="bg-amber-900/20 border border-amber-700/50 rounded-xl p-4">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-amber-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <p class="text-amber-200 font-medium">Quick log entry. Please edit to fill in additional information.</p>
          </div>
        </div>
        <% } else { %>
        <div class="bg-slate-900/40 rounded-xl p-4 border border-slate-700/30">
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
            <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wide">Medication</h3>
          </div>
          <p class="text-slate-200 mb-3">
            <span class="font-medium <%= migraineEvent.medication ? 'text-emerald-400' : 'text-slate-400' %>">
              <%= migraineEvent.medication ? 'Yes' : 'No' %>
            </span>
          </p>
          <% if (migraineEvent.medications && migraineEvent.medications.length > 0) { %>
            <div class="space-y-2 mt-3">
              <% migraineEvent.medications.forEach(function(med) { %>
                <div class="bg-slate-800/50 rounded-lg p-3 border border-slate-700/30">
                  <p class="text-slate-200 font-medium"><%= med.name %></p>
                  <div class="flex items-center gap-4 mt-1 text-sm text-slate-400">
                    <span>Dose: <span class="text-slate-300"><%= med.dose %></span></span>
                    <span>Quantity: <span class="text-slate-300"><%= med.quantity %></span></span>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>
        <% } %>

        <!-- Triggers -->
        <% if (migraineEvent.triggers && migraineEvent.triggers.length > 0 && migraineEvent.triggers.some(trigger => trigger.trim() !== "")) { %>
        <div class="bg-slate-900/40 rounded-xl p-4 border border-slate-700/30">
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wide">Triggers</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            <% const triggerArray = Array.isArray(migraineEvent.triggers) ? migraineEvent.triggers : [migraineEvent.triggers]; %>
            <% triggerArray.forEach(function(trigger) { %>
              <% if (trigger && trigger.trim() !== "") { %>
                <span class="bg-amber-500/80 hover:bg-amber-500 text-white px-3 py-1.5 rounded-full text-sm font-medium transition-colors duration-200 capitalize"><%= trigger.trim() %></span>
              <% } %>
            <% }); %>
          </div>
        </div>
        <% } %>

        <!-- Weather -->
        <% if (migraineEvent.weather && (migraineEvent.weather.temperature !== undefined || migraineEvent.weather.pressure !== undefined || migraineEvent.weather.conditions)) { %>
        <div class="bg-slate-900/40 rounded-xl p-4 border border-slate-700/30">
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
            </svg>
            <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wide">Weather Conditions</h3>
          </div>
          <div class="grid grid-cols-3 gap-4">
            <% if (migraineEvent.weather.temperature !== undefined && migraineEvent.weather.temperature !== null) { %>
            <div class="text-center">
              <p class="text-xs text-slate-400 mb-1">Temperature</p>
              <p class="text-xl font-bold text-slate-200"><%= migraineEvent.weather.temperature %>Â°F</p>
            </div>
            <% } %>
            <% if (migraineEvent.weather.pressure !== undefined && migraineEvent.weather.pressure !== null) { %>
            <div class="text-center">
              <p class="text-xs text-slate-400 mb-1">Pressure</p>
              <p class="text-xl font-bold text-slate-200"><%= migraineEvent.weather.pressure %> inHg</p>
            </div>
            <% } %>
            <% if (migraineEvent.weather.conditions) { %>
            <div class="text-center">
              <p class="text-xs text-slate-400 mb-1">Conditions</p>
              <p class="text-lg font-semibold text-slate-200 capitalize"><%= migraineEvent.weather.conditions %></p>
            </div>
            <% } %>
          </div>
        </div>
        <% } %>

        <!-- Notes -->
        <% if (migraineEvent.notes) { %>
        <div class="bg-slate-900/40 rounded-xl p-4 border border-slate-700/30">
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wide">Notes</h3>
          </div>
          <p class="text-slate-200 leading-relaxed whitespace-pre-wrap"><%= migraineEvent.notes %></p>
        </div>
        <% } %>

        <!-- Action buttons -->
        <div class="flex flex-col sm:flex-row justify-end items-stretch sm:items-center gap-3 pt-4 border-t border-slate-700/50">
          <form action="/migraines/delete/<%= migraineEvent._id %>?_method=DELETE" method="POST" class="inline">
            <button type="submit" class="w-full sm:w-auto inline-flex items-center justify-center px-5 py-2.5 text-sm font-semibold text-red-400 hover:text-red-300 bg-red-900/20 hover:bg-red-900/30 border border-red-800/50 hover:border-red-700/50 rounded-lg transition-all duration-200" onclick="return confirm('Are you sure you want to delete this event?');">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete Event
            </button>
          </form>
          <a href="/migraines/edit/<%= migraineEvent._id %>" class="w-full sm:w-auto inline-flex items-center justify-center px-5 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold rounded-lg transition-all duration-200 hover:scale-[1.02] active:scale-[0.98] shadow-lg shadow-indigo-500/20">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit Event
          </a>
        </div>
      </div>
    </div>
  </div>
</div>