                <div class="relative w-[704px] h-[448px]">
                  <% 
                    // Demo data with varying date gaps (3–14 days apart)
                    const attackTypeColors = {
                      migraine: "bg-red-900/50",
                      headache: "bg-orange-900/50",
                      "misc symptoms": "bg-yellow-900/50",
                      missing: "bg-gray-400/30 border border-slate-500/30",
                    };
                    const demoTypes = [
                      "migraine",
                      "headache",
                      "migraine",
                      "migraine",
                      "headache",
                      "misc symptoms",
                      "misc symptoms",
                      "headache",
                      "misc symptoms",
                    ];
                    const demoStarts = ["home", "work", "gym", "commute", "home", "work"];
                    const demoWeather = [
                      { t: "72", p: "29.9", c: "Overcast" },
                      { t: "68", p: "30.1", c: "Light rain" },
                      { t: "79", p: "29.7", c: "Humid" },
                      { t: "74", p: "29.8", c: "Cloudy" },
                      { t: "70", p: "30.0", c: "Clear" },
                      { t: "66", p: "30.2", c: "Breezy" },
                      { t: "73", p: "29.9", c: "Partly cloudy" },
                      { t: "71", p: "30.0", c: "Calm" },
                      { t: "69", p: "30.1", c: "Drizzle" },
                    ];
                    // generate date labels
                    let current = new Date();
                    const dateLabels = [];
                    for (let i = 0; i < 9; i++) {
                      const mm = String(current.getMonth() + 1).padStart(2, '0');
                      const dd = String(current.getDate()).padStart(2, '0');
                      const yyyy = current.getFullYear();
                      
                      dateLabels.push(`${mm}/${dd}/${yyyy}`);

                      // Randomize dates by subtracting 3–14 days
                      const gap = 3 + Math.floor(Math.random() * 12);
                      current.setDate(current.getDate() - gap);
                    }
                  %>

                  <ul
                    class="grid gap-4 grid-cols-[repeat(3,220px)] auto-rows-[140px]
                      pointer-events-none select-none"
                  >
                    <% for (let i = 0; i < 9; i++) {
                        const type = demoTypes[i];
                        const color =
                          attackTypeColors[type] || "bg-blue-900/50 border border-slate-700/30";
                        const dateLabel = dateLabels[i];
                        const start = demoStarts[i % demoStarts.length];
                        const w = demoWeather[i];
                        const pain = Math.min(5, 2 + ((i * 3) % 7));
                    %>
                    <li class="w-[220px] h-[140px]">
                      <div
                        class="flex h-full w-full flex-col justify-between rounded-lg p-4
                          shadow-md <%= color %>"
                      >
                        <div class="flex items-start justify-between">
                          <h3 class="text-base font-semibold mb-1"><%= dateLabel %></h3>
                          <p class="text-sm font-semibold capitalize truncate max-w-[90px]">
                            <%= type === "misc symptoms" ? "symptoms" : type %>
                          </p>
                        </div>

                        <div class="w-full mb-1 text-xs">
                          <p class="capitalize font-semibold truncate">
                            Started: <%= start %>
                          </p>
                        </div>

                        <div class="w-full text-[11px] leading-4">
                          <span class="font-mono inline"><%= w.t %>°F</span>
                          <span class="font-mono inline"> • </span>
                          <span class="font-mono inline"><%= w.p %>inHg</span>
                          <p class="font-mono truncate"><%= w.c %></p>
                        </div>

                        <div class="mt-auto flex items-center justify-between">
                          <p class="text-sm font-bold">Pain Level: <%= pain %></p>
                        </div>
                      </div>
                    </li>
                    <% } %>
                  </ul>
                </div>

                <!-- Edge fades -->
